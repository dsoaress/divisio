{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildEnvironment": "V2",
    "buildCommand": "pnpm build:contracts && pnpm build:client",
    "watchPatterns": ["app/client/**", "packages/contracts/**"],
    "nixpacksPlan": {
      "providers": ["node"]
    }
  },
  "deploy": {
    "startCommand": "npx serve apps/client/dist -p 80",
    "numReplicas": 1,
    "runtime": "V2",
    "restartPolicyMaxRetries": 5,
    "restartPolicyType": "ON_FAILURE",
    "sleepApplication": true
  },
  "environments": {
    "production": {
      "deploy": {
        "numReplicas": 2,
        "sleepApplication": false
      }
    }
  }
}
