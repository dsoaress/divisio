{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildEnvironment": "V2",
    "buildCommand": "pnpm build:contracts && pnpm build:client",
    "watchPatterns": ["app/client/**", "packages/contracts/**"]
  },
  "deploy": {
    "startCommand": "pnpm start:client",
    "healthcheckPath": "/",
    "healthcheckTimeout": 100,
    "numReplicas": 2,
    "restartPolicyMaxRetries": 5,
    "restartPolicyType": "ON_FAILURE",
    "sleepApplication": false
  },
  "environments": {
    "staging": {
      "deploy": {
        "numReplicas": 1,
        "sleepApplication": true
      }
    },
    "pr": {
      "deploy": {
        "numReplicas": 1,
        "sleepApplication": true
      }
    }
  }
}
