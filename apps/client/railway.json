{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildEnvironment": "V2",
    "buildCommand": "pnpm build:contracts && pnpm build:client",
    "watchPatterns": ["app/client/**", "packages/contracts/**"],
    "nixpacksPlan": {
      "providers": ["node"]
    }
  },
  "deploy": {
    "startCommand": "pnpm start:client",
    "numReplicas": 2,
    "runtime": "V2",
    "restartPolicyMaxRetries": 5,
    "restartPolicyType": "ON_FAILURE",
    "sleepApplication": false
  },
  "environments": {
    "staging": {
      "deploy": {
        "numReplicas": 1,
        "sleepApplication": true
      }
    },
    "pr": {
      "deploy": {
        "numReplicas": 1,
        "sleepApplication": true
      }
    }
  }
}
