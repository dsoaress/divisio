{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildEnvironment": "V2",
    "buildCommand": "pnpm build:contracts && pnpm build:server",
    "watchPatterns": ["app/server/**", "packages/contracts/**"],
    "nixpacksPlan": {
      "providers": ["node"]
    }
  },
  "deploy": {
    "startCommand": "pnpm db:migrate && pnpm start:server",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 300,
    "numReplicas": 2,
    "runtime": "V2",
    "restartPolicyMaxRetries": 5,
    "restartPolicyType": "ON_FAILURE",
    "sleepApplication": false
  },
  "environments": {
    "staging": {
      "deploy": {
        "numReplicas": 1,
        "sleepApplication": true
      }
    },
    "pr": {
      "deploy": {
        "startCommand": "pnpm db:migrate && pnpm db:seed && pnpm start:server",
        "numReplicas": 1,
        "sleepApplication": true
      }
    }
  }
}
